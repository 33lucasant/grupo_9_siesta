<!DOCTYPE html>
<html lang="en">
<%- include('partials/head', {Title: 'Product Detail'}) %>

<body>
    <%- include('partials/header') %>

    <main class="main">

        <%- include('partials/mobile-product') %>

        <div class="producto-y-descripcion">
            <%- include('partials/scroll-product') %>
        
            <%- include('partials/main-product') %>

            <div class="description-div">
                <div class="nombre-y-desc-div">
                    <h4 class="nom-prod"><%= product.name %></h4>
                    <h4 class="price">$<%= product.price %></h4>
                    <br>
                    <p><%= product.description %></p>
                    <br>
                </div>

                <div class="talla-div">
                    <h4><%= product.colors %></h4>
                    <br>
                    <h4 class="h4-product">Tallas</h4>
                    <br>
                    <div class="tallas">
                        <% const array_sizes = product.size.split(',') %>
                        <% for( let i = 0; i < array_sizes.length; i++ ) { %>
                            <button class="button-tallas"><%= array_sizes[i] %></button>
                        <% } %>
                    </div>
                </div>

                <div class="add-to-cart-div">
                    <a href="#">
                        <i class="fas fa-cart-plus"></i>
                    </a>
                    <a href="/cart">
                        <p>Add to Cart</p>
                    </a>
                </div>

                <% if (locals.isLogged) { %>
                    <% if (locals.userLogged.role_id == 1) { %>
                        <div class="buttons">
                            <a href="/products/edit/<%= product.id %>" class="btn-with-movement"><span class="text">EDITAR</span><span>PRODUCTO</span></a>
                            <form action="/products/<%= product.id %>/?_method=DELETE" method="POST" style="display: inline-flex" class="delete-form">
                                <button type="submit" class="btn-with-movement" style="width: 100%;"><span class="text">ELIMINAR</span><span>PRODUCTO</span></button>
                            </form>
                        </div>
                    <% } %>
                <% } %>
                
            </div>

        </div>
    </main>

    <%- include('partials/footer') %>

    <footer class="main-footer">
        <div class="description-prod">
            <div class="cart">
                <a href="/products/cart" class="add-to-cart-1">
                    <p>Add to Cart</p>
                </a>
            </div>
            <div class="description">
                <p class="nom-prod"><%= product.name %>&nbsp;&nbsp;&nbsp;</p>
                <p class="price">$<%= product.price %></p>
            </div>
        </div>
    </footer>
</body>
</html>