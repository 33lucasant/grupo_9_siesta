<div class="main-product">
    <img src="/img/products/<%= product.images[0].image %>" class="img-principal">
    <div class="small-product">
        <% for (let i = 0; i < 6; i++) { %>
            <% if (i == 0) { %>
                <img src="/img/products/<%= product.images[i].image %>" class="img-secundaria active">
            <% } else { %>
                <img src="/img/products/<%= product.images[i].image %>" class="img-secundaria">
            <% } %>
        <% } %>
    </div>
</div>