<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {Title: 'Edit Product'}) %>
<body>
    <%- include('partials/header.ejs') %>

    <div class="form-edit">

        <form action="/products/<%= productToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

            <h1>EDITAR PRODUCTO</h1>

            <input type="text" name="name" placeholder="Nombre" value="<%= productToEdit.name %>">
            <br>

            <input type="text" name="price" placeholder="Precio" value="<%= productToEdit.price %>">
            <br>

            <textarea name="description" cols="30" rows="10" placeholder="Descripción"><%= productToEdit.description %></textarea>
            <br>

            <label>Imagenes</label>
            <br>
            <input type="file" id="img" name="images" placeholder="Imagen" multiple>
            <br>

            <input type="text" name="color" placeholder="Color" value="<%= productToEdit.color %>">
            <br>

            <label for="sizes">Talles (Ingresar los talles separados por una coma)</label>
            <br>
            <input type="text" name="size" value="<%= productToEdit.size %>">
            <br>

            <label for="category">Categorías</label>
            <div class="genre-radio">
                <input type="radio" name="category" value="Hombre">Hombre
                <input type="radio" name="category" value="Mujer">Mujer
            </div>

            <button type="submit" class="btn-with-movement"><span class="text">EDITAR</span><span>PRODUCTO</span></button>
        </form>
    </div>

    <%- include('partials/footer') %>

</body>
</html>